{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "module": "CommonJS",
      "target": "ESNext",
      "esModuleInterop": true,
      "strict": true,
      "isolatedModules": false,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  